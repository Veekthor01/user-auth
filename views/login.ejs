<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Login</title>
</head>
<body>
    <h1>Login Page</h1>
    
<!-- Display error messages -->
<% if (messages.error) { %>
      <% messages.error.forEach(function (error) { %>
        <div class="error">
        <p><%= error %></p>
        </div>
        <script>
            // Automatically hide the error message after 5 seconds (5000 milliseconds)
            setTimeout(function() {
      let errorDivs = document.querySelectorAll('.error');
      if (errorDivs) {
        errorDivs.forEach(function (errorDiv) {
          errorDiv.style.display = 'none';
        });
      }
    }, 5000);
          </script>
      <% }); %>
  <% } %>
  
  <!-- Display success message -->
  <% if (messages.success) { %>
      <% messages.success.forEach(function (success) { %>
        <div class="success">
        <p><%= success %></p>
        </div>
        <script>
            // Automatically hide the success message after 5 seconds (5000 milliseconds)
            setTimeout(function() {
              document.querySelector('.success').style.display = 'none';
            }, 5000);
          </script>
      <% }); %>
  <% } %>
  
    <form action="/login" method="POST">
        <label for="email">Email:</label>
        <input type="text" name="email" id="email" aria-label="email field" required/>

        <label for="password">Password:</label>
        <input type="password" name="password" id="password" aria-label="password field" required/>

        <button type="submit">Login</button>
    </form>

    <h2>You can also login with</h2>
    <div class="oauth-container">
      <a role="button" class="oauth-button" href="/auth/github">
        <i class="fa fa-github"></i>GitHub</a>
      <a role="button" class="oauth-button" href="/auth/google">
        <i class="fa fa-google"></i>Google</a>
  </div>
  
  <div class="link-container">
    <a href="/forgot-password">Forgot Password?</a>
</div>
  
</body>
</html>
