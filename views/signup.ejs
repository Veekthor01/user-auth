<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="style.css">
    <title>Signup</title>
</head>
<body>
    <h1>Signup Page</h1>
    
<!-- Display error messages -->
<% if (messages.error) { %>
      <% messages.error.forEach(function (error) { %>
        <div class="error">
        <p><%= error %></p>
        </div>
      <% }); %>
  <% } %>
  
  <!-- Display success message -->
  <% if (messages.success) { %>
      <% messages.success.forEach(function (success) { %>
        <div class="success">
        <p><%= success %></p>
        </div>
      <% }); %>
  <% } %>
  
    <form action="/signup" method="POST">
        <label for="email">Email:</label>
        <input type="text" name="email" id="email" aria-label="email field" required/>

        <label for="password">Password:</label>
        <input type="password" name="password" id="password" aria-label="password field" required/>

        <button type="submit">Sign Up</button>
    </form>
    
</body>
</html>
